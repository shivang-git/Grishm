<script>
    let mydate;
    let date;
    let month;
    let year;
    let day;
    timechange = () => {
        var days = [
            "Sunday",
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
        ];
        var months = [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December",
        ];
        mydate = new Date()
        date = mydate.getDate();
        month = mydate.getMonth();
        year = mydate.getFullYear();
        day = mydate.getDay();
        document.querySelector("#date").innerHTML = date;
        document.querySelector("#month").innerHTML = months[month];
        document.querySelector("#year").innerHTML = year;
        document.querySelector('.Day').innerHTML = days[day];
    }
    window.onload = setInterval(timechange, 1000)
   
</script>




